---
import type { BlogEntry } from "@/types";
import { upperHumanize, plainify, slugify } from "@lib/textConverter";
import {
  FaRegFolder,
  FaRegClock,
  FaHashtag,
  FaRegCalendarAlt,
} from "react-icons/fa";
import readingTime from "@lib/readingTime";
import { formatDate } from "@lib/formatDate";
import { Image } from "astro:assets";
import defaultImage from "@assets/picture.jpg";
import LiquidGlass from "@components/common/LiquidGlassLess.astro";
import PlaceholderImage from "@components/blog/PlaceholderImage.astro";
import SmartImage from "@components/common/SmartImage.astro";

interface Props {
  entry: BlogEntry;
}

const { entry }: Props = Astro.props;
const { title, description, date, categories, tags, image, imageAlt } =
  entry.data;
const descriptionLength = 120;

const hasCustomImage = !!(image && (typeof image === "string" || (typeof image === "object" && "src" in image)));

const displayImageAlt = imageAlt || `${title} - 默认图片`;

const entryDate = date ? formatDate(date) : null;
const entryReadingTime = readingTime(entry.body!, 1);
const entryDescription = description?.substring(0, descriptionLength) || "";
---

<LiquidGlass
  heavy
  wrapperClass="dock rounded-2xl h-40 md:h-56 my-3 pl-0 hover:scale-[1.01] border-2 border-border/50 dark:border-border/30 hover:border-primary/40 dark:hover:border-primary/30 hover:shadow-2xl hover:shadow-primary/10"
  textClass="h-full"
  animation="fadeRight"
>

  <div class="flex h-full group">

    <div
      class="relative w-36 md:w-72 h-full flex-shrink-0 overflow-hidden rounded-l-2xl"
    >
      <a href={`/blog/${entry.id}`} class="block h-full">
        {hasCustomImage ? (
          <>
            <SmartImage
              src={image}
              alt={displayImageAlt}
              class="w-full h-full object-cover transition-all duration-700 ease-out group-hover:scale-110 group-hover:brightness-105"
              loading="lazy"
              quality={50}
              fetchpriority="high"
            />

            <div
              class="absolute inset-0 bg-gradient-to-r from-black/40 via-black/10 to-transparent opacity-60 group-hover:opacity-30 transition-opacity duration-500"
            >
            </div>

            <div
              class="absolute top-3 right-3 px-2.5 py-1 rounded-full bg-primary/95 backdrop-blur-sm text-primary-foreground text-[10px] font-bold shadow-lg opacity-0 group-hover:opacity-100 transition-all duration-300 translate-y-2 group-hover:translate-y-0"
            >
              阅读
            </div>
          </>
        ) : (
          <div class="w-full h-full transition-all duration-700 ease-out group-hover:scale-110">
            <PlaceholderImage
              title={title}
              className="w-full h-full rounded-l-2xl"
            />
          </div>
        )}
      </a>
    </div>


    <div class="flex-1 py-3 px-4 md:px-6 flex flex-col justify-between min-w-0">

      <div class="flex-1">

        <h4
          class="mb-2 text-lg md:text-xl font-bold text-txt-p dark:text-darkmode-txt-p !line-clamp-2 leading-tight group-hover:text-primary transition-colors duration-300"
        >
          <a
            href={`/blog/${entry.id}`}
            class="hover:underline hover:decoration-primary hover:decoration-2 hover:underline-offset-4 block"
          >
            {title}
          </a>
        </h4>


        {/* 分类和标签 */}
        <div class="flex flex-wrap items-center gap-1.5 mb-2">
          {
            categories && (
              <>
                {categories.slice(0, 2).map(
                  (category: string | undefined, index: number) =>
                    category && (
                      <a
                        href={`/blog/categories/${slugify(category)}`}
                        class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-medium
                               bg-primary/10 dark:bg-primary/15
                               text-primary dark:text-primary-light
                               hover:bg-primary/20 dark:hover:bg-primary/25
                               transition-colors duration-200"
                      >
                        {upperHumanize(category)}
                      </a>
                    ),
                )}
                {categories.length > 2 && (
                  <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-medium text-muted-foreground bg-muted/50">
                    +{categories.length - 2}
                  </span>
                )}
              </>
            )
          }
          {
            tags && tags.length > 0 && (
              <>
                {tags.slice(0, 3).map((tag) => (
                  <a
                    href={`/blog/tags/${slugify(tag)}`}
                    class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-medium
                           bg-muted/80 dark:bg-muted/60
                           text-muted-foreground dark:text-muted-foreground
                           hover:bg-muted dark:hover:bg-muted/80
                           transition-colors duration-200"
                  >
                    <span class="mr-0.5 opacity-60">#</span>
                    {tag}
                  </a>
                ))}
                {tags.length > 3 && (
                  <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-medium text-muted-foreground bg-muted/50">
                    +{tags.length - 3}
                  </span>
                )}
              </>
            )
          }
          <div class="flex items-center gap-2 ml-auto text-[10px] text-txt-light dark:text-darkmode-txt-light opacity-60">
            <div class="items-center hidden md:flex">
              <FaRegClock className="mr-0.5" />
              <span>{entryReadingTime}</span>
            </div>
            {
              entryDate && (
                <div class="flex items-center">
                  <FaRegCalendarAlt className="mr-0.5" />
                  <span>{entryDate}</span>
                </div>
              )
            }
          </div>
        </div>

        <p
          class="!line-clamp-2 md:!line-clamp-3 leading-relaxed text-txt-light dark:text-darkmode-txt-light hidden md:block text-sm"
        >
          {entryDescription}
        </p>
      </div>


      <div class="mt-2 pt-2 border-t border-border/50 dark:border-border/30 hidden md:flex items-center justify-between">
        <a
          href={`/blog/${entry.id}`}
          class="inline-flex items-center text-primary hover:text-primary-dark font-semibold text-xs transition-all duration-300 group/link"
        >
          <span>阅读全文</span>
          <svg
            class="ml-2 w-3.5 h-3.5 transition-transform duration-300 group-hover/link:translate-x-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2.5"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</LiquidGlass>

