---
import type { BlogEntry } from "@/types";
import { plainify, slugify } from "@lib/textConverter";
import { FaRegCalendarAlt } from "react-icons/fa";
import readingTime from "@lib/readingTime";
import { formatDate } from "@lib/formatDate";
import { Image } from "astro:assets";
import defaultImage from "@assets/picture.jpg";
import PlaceholderImage from "@components/blog/PlaceholderImage.astro";
import SmartImage from "@components/common/SmartImage.astro";

interface Props {
  entry: BlogEntry;
}

const { entry }: Props = Astro.props;
const { title, description, date, categories, tags, image, imageAlt } =
  entry.data;

const descriptionLength = 200;

const hasCustomImage = !!(image && (typeof image === "string" || (typeof image === "object" && "src" in image)));
const displayImageAlt = imageAlt || `${title} - 默认图片`;

const entryDate = date ? formatDate(date) : null;
const entryReadingTime = readingTime(entry.body!, 1); 
const entryDescription =
  description || plainify(entry.body!.slice(0, descriptionLength));
---

<div
  class="glass-t border-2 border-border/50 dark:border-border/30 h-full my-2 pl-0 rounded-2xl overflow-hidden transition-all duration-300 group hover:border-primary/40 dark:hover:border-primary/30 hover:shadow-2xl hover:shadow-primary/10"
>
  <div
    class="flex flex-col h-full rounded-2xl
    hover:scale-[1.01] transition-all duration-300"
  >

    <div class="relative w-full aspect-[7/3] overflow-hidden rounded-t-2xl">
      <a href={`/blog/${entry.id}`} class="block w-full h-full">
        {hasCustomImage ? (
          <>
            <SmartImage
              src={image}
              alt={displayImageAlt}
              class="w-full h-full object-cover transition-all duration-700 ease-out group-hover:scale-110 group-hover:brightness-105"
              loading="lazy"
              quality={50}
              fetchpriority="high"
            />

            <div
              class="absolute inset-0 bg-gradient-to-t from-black/30 via-black/5 to-transparent opacity-60 group-hover:opacity-30 transition-opacity duration-500"
            >
            </div>

            <div
              class="absolute top-3 right-3 px-3 py-1.5 rounded-full bg-primary/90 backdrop-blur-sm text-primary-foreground text-xs font-semibold shadow-lg opacity-0 group-hover:opacity-100 transition-all duration-300 translate-y-2 group-hover:translate-y-0"
            >
              阅读文章
            </div>
          </>
        ) : (
          <div class="w-full h-full transition-all duration-700 ease-out group-hover:scale-110">
            <PlaceholderImage
              title={title}
              className="w-full h-full rounded-t-2xl"
            />
          </div>
        )}
      </a>
    </div>


    <div class="p-6 flex flex-col flex-1">

      <h4
        class="mb-3 text-xl font-bold text-txt-p dark:text-darkmode-txt-p line-clamp-2 leading-tight group-hover:text-primary transition-colors duration-300"
      >
        <a
          href={`/blog/${entry.id}`}
          class="hover:underline hover:decoration-primary hover:decoration-2 hover:underline-offset-4"
        >
          {title}
        </a>
      </h4>


      {/* 分类和标签 */}
      <div class="flex flex-wrap items-center gap-1.5 mb-3">
        {
          categories && (
            <>
              {categories.map(
                (
                  category: string | undefined,
                  index: number,
                  array: (string | undefined)[],
                ) => (
                  <a
                    href={`/blog/categories/${slugify(category ? category : "")}`}
                    class="inline-flex items-center px-2 py-0.5 rounded text-[11px] font-medium
                           bg-primary/10 dark:bg-primary/15
                           text-primary dark:text-primary-light
                           hover:bg-primary/20 dark:hover:bg-primary/25
                           transition-colors duration-200"
                  >
                    {category}
                  </a>
                ),
              )}
            </>
          )
        }
        {
          tags && tags.length > 0 && (
            <>
              {tags.map((tag) => (
                <a
                  href={`/blog/tags/${slugify(tag)}`}
                  class="inline-flex items-center px-2 py-0.5 rounded text-[11px] font-medium
                         bg-muted/80 dark:bg-muted/60
                         text-muted-foreground dark:text-muted-foreground
                         hover:bg-muted dark:hover:bg-muted/80
                         transition-colors duration-200"
                >
                  <span class="mr-0.5 opacity-60">#</span>
                  {tag}
                </a>
              ))}
            </>
          )
        }
        {
          entryDate && (
            <div class="flex items-center text-txt-light dark:text-darkmode-txt-light opacity-60 ml-auto">
              <FaRegCalendarAlt className="mr-1 text-[10px]" />
              <span class="text-[11px]">{entryDate}</span>
            </div>
          )
        }
      </div>

      <p
        class="text-txt-light dark:text-darkmode-txt-light line-clamp-3 leading-relaxed text-sm mb-5 flex-1"
      >
        {entryDescription}
      </p>


      <div class="flex items-center justify-between pt-3 border-t border-border/50 dark:border-border/30">
        <a
          href={`/blog/${entry.id}`}
          class="inline-flex items-center text-primary hover:text-primary-dark text-sm font-semibold transition-all duration-300 group/link"
        >
          <span>阅读全文</span>
          <svg
            class="ml-2 w-4 h-4 transition-transform duration-300 group-hover/link:translate-x-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2.5"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        {
          entryReadingTime && (
            <div class="flex items-center text-xs text-txt-light dark:text-darkmode-txt-light opacity-60 group-hover:opacity-100 transition-opacity duration-300">
              <svg class="w-3.5 h-3.5 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="font-medium">{entryReadingTime}</span>
            </div>
          )
        }
      </div>
    </div>
  </div>
</div>
