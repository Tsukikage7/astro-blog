---
import { lowerHumanize, slugify } from "@lib/textConverter";
import { FaRegFolder, FaHashtag } from "react-icons/fa";

import AuthorSidebar from "@components/common/authorSidebar.astro";
import LiquidGlassLess from "@components/common/LiquidGlassLess.astro";

interface CategoryWithCount {
  name: string;
  slug: string;
  count: number;
}

interface Props {
  tags: string[];
  categories: string[] | CategoryWithCount[];
  allBlogCount?: number;
}

const { tags, categories }: Props = Astro.props;
---

<div class="h-full w-full overflow-y-auto">
  
  <AuthorSidebar />
  

  <LiquidGlassLess
    heavy
    wrapperClass=" dock !p-6 my-2 mb-4"
    animation="fadeLeft"
  >
    <div class="intersect:animate-fadeLeft">
      
      <h4 class="mb-2 text-base md:text-lg">
        <a href="/blog/categories">
          <FaRegFolder className={"mr-1 -mt-1.5 inline-block"} />
           分类
        </a>
      </h4>
      <hr class="mb-2 -mt-1 border border-gray-600/50" />
      <ul class="space-y-3">
        {
          categories.map((category) => {
            
            const isCountCategory =
              typeof category === "object" &&
              "name" in category &&
              "count" in category;
            const categoryName = isCountCategory ? category.name : category;
            const categoryCount = isCountCategory ? category.count : "";
            const categorySlug = isCountCategory
              ? category.slug
              : slugify(categoryName);

            return (
              <li class="">
                <a
                  class="flex items-center justify-between w-full py-2.5 text-sm text-muted-foreground hover:text-foreground transition-colors group"
                  href={`/blog/categories/${categorySlug}`}
                >
                  <span class="flex items-center gap-2">
                    <span class="w-1 h-1 rounded-full bg-border group-hover:bg-foreground/50 transition-colors"></span>
                    {categoryName}
                  </span>
                  {categoryCount && (
                    <span class="text-xs text-muted-foreground/40 group-hover:text-muted-foreground/70 transition-colors tabular-nums">
                      {categoryCount}
                    </span>
                  )}
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
  </LiquidGlassLess>

  
  <LiquidGlassLess
    heavy
    wrapperClass=" dock !p-6 mt-2 mb-4"
    animation="fadeLeft"
  >
    <div class="intersect:animate-fadeLeft">
      <h4 class="mb-2 text-base md:text-lg">
        <a href="/blog/tags">
          <FaHashtag className={"mr-1 -mt-1.5 inline-block"} />
           标签
        </a>
      </h4>
      <hr class="mb-2 -mt-1 border border-gray-600/50" />
      <ul>
        {
          tags.map((tag: any) => {
            return (
              <li class="inline-block m-1">
                <a
                  aria-label={tag}
                  href={`/blog/tags/${lowerHumanize(tag)}`}
                  class="inline-flex items-center gap-1 px-2.5 py-1 text-sm rounded-md font-medium bg-muted text-muted-foreground border border-border hover:bg-accent hover:text-accent-foreground transition-colors duration-200"
                >
                  #{tag}
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
  </LiquidGlassLess>
</div>
