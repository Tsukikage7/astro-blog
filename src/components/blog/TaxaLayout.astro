---
import BaseLayout from "@components/base/BaseLayout.astro";
import { upperHumanize } from "@lib/textConverter";
import PageHeader from "@components/common/PageHeader.astro";
import { FaRegFolder, FaHashtag } from "react-icons/fa";

interface Props {
  taxonomy: string;
  taxonomyTitle: string;
  taxa: string[];
  allTaxa: string[];
}

const { taxonomy, taxonomyTitle, taxa, allTaxa }: Props = Astro.props;
---

<BaseLayout title={taxonomy}>
  <div class="container px-3 lg:px-8">
    <PageHeader title={taxonomyTitle} articleCount={taxa.length} />
    <section class="section py-12">
      <div class="container px-3 lg:px-8">
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
          {
            taxa.map((taxon: string) => {
              const count = allTaxa.filter((c) => c === taxon).length;
              return (
                <a
                  href={`/blog/${taxonomy}/${taxon}`}
                  class="group relative flex items-center justify-between px-6 py-4 rounded-lg border border-border bg-card text-card-foreground hover:bg-accent hover:text-accent-foreground transition-all duration-200 shadow-sm hover:shadow-md"
                >
                  <div class="flex items-center gap-3">
                    {taxonomy === "categories" ? (
                      <FaRegFolder className="text-lg text-muted-foreground group-hover:text-accent-foreground transition-colors" />
                    ) : (
                      <FaHashtag className="text-lg text-muted-foreground group-hover:text-accent-foreground transition-colors" />
                    )}
                    <span class="font-medium text-sm md:text-base">
                      {upperHumanize(taxon)}
                    </span>
                  </div>
                  <span class="inline-flex items-center justify-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-secondary text-secondary-foreground group-hover:bg-primary group-hover:text-primary-foreground transition-colors">
                    {count}
                  </span>
                </a>
              );
            })
          }
        </div>

        {}
        {
          taxa.length === 0 && (
            <div class="text-center py-12">
              <p class="text-muted-foreground text-lg">暂无{taxonomyTitle}</p>
            </div>
          )
        }
      </div>
    </section>
  </div>
</BaseLayout>
