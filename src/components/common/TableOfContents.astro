---
import type { HeadingHierarchy } from "@/types/index";
import type { MarkdownHeading } from "astro";
import { createHeadingHierarchy } from "@lib/tocUtils";

interface Props {
  headings: MarkdownHeading[];
  tocDepth?: number;
  defaultExpanded?: boolean;
}

const { headings, tocDepth = 3, defaultExpanded = true } = Astro.props;
const heirarchy: HeadingHierarchy[] = createHeadingHierarchy(headings);
const toc = heirarchy.filter((heading) => heading.depth <= tocDepth);
---

{
  toc.length > 0 && (
    <nav class="toc-nav intersect:animate-fadeLeft" data-toc-nav>
      <button
        class="toc-header"
        data-toc-toggle
        aria-expanded={defaultExpanded ? "true" : "false"}
      >
        <span class="toc-title">内容导航</span>
        <svg
          class="toc-icon"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </button>
      <div class={`toc-content ${defaultExpanded ? "toc-content--expanded" : ""}`} data-toc-content>
        <ul class="toc-list">
          {toc.map((heading) => (
            <li class={heading.depth === 2 ? "toc-item" : "toc-item toc-item--nested"}>
              <a href={`#${heading.slug}`} class="toc-link" data-toc-link>
                {heading.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </nav>
  )
}

<style>
  :global(h1, h2, h3, h4, h5, h6) {
    scroll-margin-top: 5rem;
  }

  @media (min-width: 768px) {
    :global(h1, h2, h3, h4, h5, h6) {
      scroll-margin-top: 6rem;
    }
  }

  @media (min-width: 1024px) {
    :global(h1, h2, h3, h4, h5, h6) {
      scroll-margin-top: 8rem;
    }
  }

  .toc-nav {
    padding: 0.5rem 0;
  }

  .toc-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 0.5rem;
    background: none;
    border: none;
    cursor: pointer;
    border-radius: 0.375rem;
    transition: background 0.15s ease;
  }

  .toc-header:hover {
    background: hsl(var(--muted) / 0.5);
  }

  .toc-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: hsl(var(--muted-foreground));
  }

  .toc-icon {
    color: hsl(var(--muted-foreground));
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .toc-header[aria-expanded="true"] .toc-icon {
    transform: rotate(180deg);
  }

  .toc-content {
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 0.25s ease;
    overflow: hidden;
  }

  .toc-content--expanded {
    grid-template-rows: 1fr;
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    min-height: 0;
    max-height: 24rem;
    overflow-y: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-top: 0.5rem;
  }

  .toc-list::-webkit-scrollbar {
    display: none;
  }

  .toc-item {
    position: relative;
  }

  .toc-item--nested {
    padding-left: 1rem;
  }

  .toc-link {
    display: block;
    padding: 0.375rem 0.5rem;
    font-size: 0.875rem;
    line-height: 1.4;
    color: hsl(var(--muted-foreground));
    text-decoration: none;
    border-radius: 0.25rem;
    transition: all 0.15s ease;
    border-left: 2px solid transparent;
  }

  .toc-link:hover {
    color: hsl(var(--foreground));
    background: hsl(var(--muted) / 0.5);
    border-left-color: hsl(var(--primary) / 0.5);
  }

  .toc-link:active {
    background: hsl(var(--muted));
  }
</style>

<script>
  function getHeaderHeight(): number {
    const header = document.querySelector('header');
    return header ? header.offsetHeight + 32 : 140;
  }

  function setupToc() {
    // 收起/展开功能
    const toggleButtons = document.querySelectorAll('[data-toc-toggle]');
    toggleButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const expanded = btn.getAttribute('aria-expanded') === 'true';
        btn.setAttribute('aria-expanded', String(!expanded));
        const content = btn.nextElementSibling as HTMLElement;
        content?.classList.toggle('toc-content--expanded', !expanded);
      });
    });

    // 链接点击处理
    const tocLinks = document.querySelectorAll('[data-toc-link]');
    tocLinks.forEach(link => {
      const newLink = link.cloneNode(true);
      link.parentNode?.replaceChild(newLink, link);

      newLink.addEventListener('click', (e: Event) => {
        e.preventDefault();
        const target = e.currentTarget as HTMLAnchorElement;
        const href = target.getAttribute('href');
        if (!href) return;

        const targetId = href.substring(1);
        const targetElement = document.getElementById(targetId);

        if (targetElement) {
          const rect = targetElement.getBoundingClientRect();
          const currentScrollTop = window.pageYOffset || document.documentElement.scrollTop;
          const targetScrollTop = currentScrollTop + rect.top - getHeaderHeight();

          window.scrollTo({
            top: Math.max(0, targetScrollTop),
            behavior: 'smooth'
          });

          history.pushState(null, "", `#${targetId}`);
        }
      });
    });
  }

  document.addEventListener('DOMContentLoaded', setupToc);
  document.addEventListener('astro:page-load', setupToc);
</script>
