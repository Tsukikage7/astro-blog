---
/**
 * SmartImage - 智能图片组件
 * 自动处理 Astro Image 对象和外部 URL 字符串两种格式
 * 统一图片处理逻辑，避免重复代码
 */
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  src: ImageMetadata | string;
  alt: string;
  class?: string;
  width?: number;
  height?: number;
  loading?: "lazy" | "eager";
  decoding?: "async" | "sync" | "auto";
  quality?: number;
  format?: "webp" | "avif" | "png" | "jpeg" | "jpg";
  inferSize?: boolean;
  fetchpriority?: "high" | "low" | "auto";
  style?: string;
}

const {
  src,
  alt,
  class: className = "",
  width,
  height,
  loading = "lazy",
  decoding = "async",
  quality = 75,
  format = "webp",
  inferSize = true,
  fetchpriority,
  style,
} = Astro.props;

// 判断是字符串 URL 还是 Astro Image 对象
const isStringUrl = typeof src === "string";
---

{
  isStringUrl ? (
    <img
      class={className}
      src={src}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      decoding={decoding}
      style={style}
    />
  ) : (
    <Image
      class={className}
      src={src}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      decoding={decoding}
      quality={quality}
      format={format}
      inferSize={inferSize}
      fetchpriority={fetchpriority}
      style={style}
    />
  )
}
