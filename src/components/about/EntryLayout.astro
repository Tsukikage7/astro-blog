---
import BaseLayout from "@components/base/BaseLayout.astro";
import { markdownify } from "@lib/textConverter";
import type { AboutEntry } from "@/types";
import { render } from "astro:content";
import LiquidGlassLess from "@components/common/LiquidGlassLess.astro";
import { Image } from "astro:assets";
import { FaGithub, FaEnvelope, FaMapMarkerAlt, FaBriefcase, FaGraduationCap, FaCode, FaLightbulb, FaServer, FaDesktop, FaTools, FaDatabase, FaCogs, FaCloud, FaMobile, FaLaptopCode, FaPalette, FaShieldAlt, FaRocket, FaWrench, FaChartBar, FaBolt, FaHdd, FaTag } from "react-icons/fa";

// Map emoji or icon names to react-icon components
const iconMap: Record<string, any> = {
  // Emoji mappings
  'üîß': FaWrench,
  'üíæ': FaDatabase,
  '‚ö°': FaBolt,
  'üìä': FaChartBar,
  'üìå': FaTag,
  'üí°': FaLightbulb,
  'üöÄ': FaRocket,
  'üíª': FaLaptopCode,
  'üõ†Ô∏è': FaTools,
  '‚òÅÔ∏è': FaCloud,
  'üì±': FaMobile,
  'üé®': FaPalette,
  'üîí': FaShieldAlt,
  '‚öôÔ∏è': FaCogs,
  'üñ•Ô∏è': FaDesktop,
  'üóÑÔ∏è': FaServer,
  // Name mappings
  'wrench': FaWrench,
  'database': FaDatabase,
  'bolt': FaBolt,
  'chart': FaChartBar,
  'code': FaCode,
  'lightbulb': FaLightbulb,
  'rocket': FaRocket,
  'laptop': FaLaptopCode,
  'tools': FaTools,
  'cloud': FaCloud,
  'mobile': FaMobile,
  'palette': FaPalette,
  'shield': FaShieldAlt,
  'cogs': FaCogs,
  'desktop': FaDesktop,
  'server': FaServer,
};

// Get icon component from emoji or name, with fallback
function getIconComponent(icon: string | undefined) {
  if (!icon) return FaTag;
  return iconMap[icon] || FaTag;
}

interface Props {
  entry: AboutEntry;
}

const { entry } = Astro.props;
const {
  title,
  description,
  image,
  imageAlt,
  info,
  skillCategories,
  skills,
  experience,
  education,
  openSource,
  social
} = entry.data;
const { Content } = await render(entry);

const imageSrc = image ? (typeof image === 'string' ? image : image.src) : undefined;
---

<BaseLayout title={title} description={description} image={imageSrc}>
  <section class="container px-3 lg:px-8 py-8">

    <!-- Â§¥ÈÉ®Âå∫ÂüüÔºöÂ§¥ÂÉè + ‰∏™‰∫∫‰ø°ÊÅØÔºàÂ±Ö‰∏≠Ôºâ -->
    <LiquidGlassLess heavy textClass="p-6 md:p-8 mb-6">
      <div class="flex flex-col items-center text-center">
        <!-- Â§¥ÂÉè -->
        {image && (
          <div class="mb-5">
            <div class="relative group">
              <div class="absolute -inset-3 bg-gradient-to-r from-orange-500 via-indigo-500 to-green-500 rounded-full blur-xl opacity-40 group-hover:opacity-60 transition duration-500"></div>
              {typeof image === 'string' ? (
                <img
                  class="relative w-28 h-28 md:w-36 md:h-36 rounded-full border-4 border-white/20 shadow-2xl object-cover"
                  src={image}
                  alt={imageAlt || "Avatar"}
                  width="144"
                  height="144"
                  loading="eager"
                />
              ) : (
                <Image
                  class="relative w-28 h-28 md:w-36 md:h-36 rounded-full border-4 border-white/20 shadow-2xl object-cover"
                  src={image}
                  alt={imageAlt || "Avatar"}
                  width={144}
                  height={144}
                  loading="eager"
                />
              )}
            </div>
          </div>
        )}

        <!-- ‰∏™‰∫∫‰ø°ÊÅØ -->
        <h1 class="text-4xl md:text-5xl font-bold text-txt-p dark:text-darkmode-txt-p mb-3">
          {info?.name || title}
        </h1>
        {info?.title && (
          <p class="text-xl md:text-2xl text-primary font-medium mb-4">{info.title}</p>
        )}
        {description && (
          <p class="text-base md:text-lg text-txt-s dark:text-darkmode-txt-s mb-5 max-w-2xl">{description}</p>
        )}

        <!-- Ê†áÁ≠æ‰ø°ÊÅØ -->
        <div class="flex flex-wrap justify-center gap-3 mb-5">
          {info?.location && (
            <span class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-base bg-muted/50 text-muted-foreground">
              <FaMapMarkerAlt className="text-sm" />
              {info.location}
            </span>
          )}
          {info?.age && (
            <span class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-base bg-muted/50 text-muted-foreground">
              {info.age} Â≤Å
            </span>
          )}
        </div>

        <!-- Á§æ‰∫§ÈìæÊé• -->
        {social && (
          <div class="flex flex-wrap justify-center gap-3">
            {social.github && (
              <a
                href={social.github.startsWith('http') ? social.github : `https://github.com/${social.github}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-[#333] hover:bg-[#24292e] text-white text-base font-medium transition-colors"
              >
                <FaGithub className="text-lg" />
                GitHub
              </a>
            )}
            {social.email && (
              <a
                href={`mailto:${social.email}`}
                class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-primary/10 hover:bg-primary/20 text-primary text-base font-medium transition-colors"
              >
                <FaEnvelope className="text-lg" />
                ÈÇÆÁÆ±
              </a>
            )}
          </div>
        )}
      </div>
    </LiquidGlassLess>

    <div class="max-w-6xl mx-auto space-y-6">

      <!-- ÊäÄËÉΩÂàÜÁ±ª -->
      {skillCategories && skillCategories.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold text-txt-p dark:text-darkmode-txt-p mb-5 flex items-center gap-2">
            <FaLightbulb className="text-3xl text-primary" /> ‰∏ì‰∏öÊäÄËÉΩ
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            {skillCategories.map((category) => {
              const CategoryIcon = getIconComponent(category.icon);
              return (
              <LiquidGlassLess heavy textClass="p-5 h-full">
                <h3 class="text-lg font-bold mb-3 text-txt-p dark:text-darkmode-txt-p flex items-center gap-2">
                  <CategoryIcon className="text-xl text-primary" />
                  {category.name}
                </h3>
                <ul class="space-y-2">
                  {category.skills.map((skill) => (
                    <li class="flex items-start gap-2 text-base text-txt-s dark:text-darkmode-txt-s">
                      <span class="w-1.5 h-1.5 rounded-full bg-primary mt-2 flex-shrink-0"></span>
                      <span>{skill}</span>
                    </li>
                  ))}
                </ul>
              </LiquidGlassLess>
              );
            })}
          </div>
        </div>
      )}

      <!-- ÊïôËÇ≤ËÉåÊôØ -->
      {education && education.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold text-txt-p dark:text-darkmode-txt-p mb-5 flex items-center gap-2">
            <FaGraduationCap className="text-3xl text-primary" /> ÊïôËÇ≤ËÉåÊôØ
          </h2>
          <LiquidGlassLess heavy textClass="p-6">
            {education.map((edu, index) => (
              <div class={`flex flex-col md:flex-row md:items-center justify-between ${index > 0 ? 'mt-4 pt-4 border-t border-border/30' : ''}`}>
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                    <FaGraduationCap className="text-primary text-xl" />
                  </div>
                  <div>
                    <div class="flex items-center gap-2 flex-wrap">
                      <span class="font-bold text-lg text-txt-p dark:text-darkmode-txt-p">{edu.school}</span>
                      {edu.badge && (
                        <span class="px-2.5 py-1 rounded text-sm font-medium bg-orange-500/10 text-orange-500 border border-orange-500/20">
                          {edu.badge}
                        </span>
                      )}
                    </div>
                    <div class="text-base text-txt-s dark:text-darkmode-txt-s mt-1">{edu.degree}</div>
                  </div>
                </div>
                <div class="text-base text-txt-s dark:text-darkmode-txt-s mt-2 md:mt-0 md:text-right">
                  <div>{edu.period}</div>
                  {edu.location && <div class="text-sm opacity-70">{edu.location}</div>}
                </div>
              </div>
            ))}
          </LiquidGlassLess>
        </div>
      )}

      <!-- Â∑•‰ΩúÁªèÂéÜ -->
      {experience && experience.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold text-txt-p dark:text-darkmode-txt-p mb-5 flex items-center gap-2">
            <FaBriefcase className="text-3xl text-primary" /> Â∑•‰ΩúÁªèÂéÜ
          </h2>
          <div class="space-y-4">
            {experience.map((exp) => (
              <LiquidGlassLess heavy textClass="p-6">
                <div class="flex flex-col md:flex-row md:items-start justify-between mb-3">
                  <div>
                    <h3 class="font-bold text-xl text-txt-p dark:text-darkmode-txt-p">{exp.title}</h3>
                    <div class="text-primary font-medium text-lg">{exp.company}</div>
                  </div>
                  <div class="text-base text-txt-s dark:text-darkmode-txt-s mt-1 md:mt-0 md:text-right">
                    <div>{exp.period}</div>
                    {exp.location && <div class="text-sm opacity-70">{exp.location}</div>}
                  </div>
                </div>
                {exp.description && (
                  <p class="text-base text-txt-s dark:text-darkmode-txt-s mb-3">{exp.description}</p>
                )}
                {exp.highlights && exp.highlights.length > 0 && (
                  <ul class="space-y-2">
                    {exp.highlights.map((highlight) => (
                      <li class="flex items-start gap-2 text-base text-txt-s dark:text-darkmode-txt-s">
                        <span class="w-1.5 h-1.5 rounded-full bg-primary mt-2 flex-shrink-0"></span>
                        <span>{highlight}</span>
                      </li>
                    ))}
                  </ul>
                )}
              </LiquidGlassLess>
            ))}
          </div>
        </div>
      )}

      <!-- ÂºÄÊ∫êÈ°πÁõÆ -->
      {openSource && openSource.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold text-txt-p dark:text-darkmode-txt-p mb-5 flex items-center gap-2">
            <FaCode className="text-3xl text-primary" /> ÂºÄÊ∫êË¥°ÁåÆ
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {openSource.map((project) => (
              <LiquidGlassLess heavy textClass="p-6 h-full">
                <div class="flex items-start justify-between mb-3">
                  <div>
                    <h3 class="font-bold text-lg text-txt-p dark:text-darkmode-txt-p flex items-center gap-2">
                      {project.url ? (
                        <a href={project.url} target="_blank" rel="noopener noreferrer" class="hover:text-primary transition-colors">
                          {project.name}
                        </a>
                      ) : project.name}
                    </h3>
                    <span class="inline-flex items-center px-2.5 py-1 rounded text-sm font-medium bg-green-500/10 text-green-600 dark:text-green-400 mt-1">
                      {project.role}
                    </span>
                  </div>
                  <span class="text-sm text-txt-s dark:text-darkmode-txt-s">{project.period}</span>
                </div>
                {project.description && (
                  <p class="text-base text-txt-s dark:text-darkmode-txt-s mb-3">{project.description}</p>
                )}
                {project.contributions && project.contributions.length > 0 && (
                  <ul class="space-y-1.5">
                    {project.contributions.map((contribution) => (
                      <li class="flex items-start gap-2 text-sm text-txt-s dark:text-darkmode-txt-s">
                        <span class="w-1.5 h-1.5 rounded-full bg-green-500 mt-1.5 flex-shrink-0"></span>
                        <span>{contribution}</span>
                      </li>
                    ))}
                  </ul>
                )}
              </LiquidGlassLess>
            ))}
          </div>
        </div>
      )}

      <!-- Markdown ÂÜÖÂÆπ -->
      <LiquidGlassLess heavy textClass="p-6 md:p-8" wrapperClass="markdown-content">
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <Content />
        </div>
      </LiquidGlassLess>
    </div>
  </section>
</BaseLayout>

<style>
  :global(.markdown-content h2) {
    @apply text-2xl font-bold mb-4 mt-2 text-txt-p dark:text-darkmode-txt-p;
  }

  :global(.markdown-content ul) {
    @apply space-y-2;
  }

  :global(.markdown-content li) {
    @apply text-txt-s dark:text-darkmode-txt-s;
  }

  :global(.markdown-content hr) {
    @apply my-6 border-white/10;
  }

  :global(.markdown-content blockquote) {
    @apply border-l-4 border-primary pl-4 italic text-txt-s dark:text-darkmode-txt-s my-4 bg-primary/5 py-2 rounded-r;
  }

  :global(.markdown-content a) {
    @apply text-primary hover:text-primary/80 transition-colors;
  }

  :global(.markdown-content strong) {
    @apply text-txt-p dark:text-darkmode-txt-p font-semibold;
  }

  :global(.markdown-content p) {
    @apply mb-4 leading-relaxed text-txt-p dark:text-darkmode-txt-p;
  }
</style>
