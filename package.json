{
  "name": "astro-blog",
  "version": "0.0.1",
  "type": "module",
  "description": "A modern blog built with Astro.",
  "author": "Maple",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tsukikage7/astro-blog.git"
  },
  "homepage": "https://github.com/Tsukikage7/astro-blog#readme",
  "bugs": {
    "url": "https://github.com/Tsukikage7/astro-blog/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "astro dev",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' astro build",
    "build:fast": "NODE_ENV=development NODE_OPTIONS='--max-old-space-size=4096' astro build",
    "build:prod": "NODE_ENV=production NODE_OPTIONS='--max-old-space-size=4096' astro build",
    "build:full": "pnpm run font:analyze && pnpm run font:subset && NODE_OPTIONS='--max-old-space-size=4096' astro build && pagefind --site dist",
    "format": "prettier -w ./src",
    "preview": "astro preview",
    "serve": "astro preview",
    "clean": "rm -rf dist",
    "build:analyze": "NODE_OPTIONS='--max-old-space-size=4096' astro build --verbose",
    "font:analyze": "node scripts/analyze-font-usage.js",
    "font:subset": "node scripts/build-font-subset.js"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.12",
    "@astrojs/node": "^9.5.1",
    "@astrojs/react": "^4.4.2",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/language": "^6.11.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@uiw/codemirror-themes": "^4.23.14",
    "@uiw/codemirror-themes-all": "^4.23.14",
    "astro": "^5.16.0",
    "astro-auto-import": "^0.4.2",
    "astro-tooltips": "^0.6.2",
    "clsx": "^2.1.1",
    "codemirror": "^6.0.2",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "fuse.js": "^7.1.0",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "katex": "^0.16.21",
    "marked": "^17.0.1",
    "plyr": "^3.8.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "prop-types": "^15.8.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-lite-youtube-embed": "^3.3.2",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "remark-collapse": "^0.1.2",
    "remark-math": "^6.0.0",
    "remark-toc": "^9.0.0",
    "sharp": "^0.34.5",
    "swiper": "^12.0.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^9.39.1",
    "fontkit": "^2.0.4",
    "glob": "^13.0.0",
    "pagefind": "^1.0.4",
    "postcss": "^8.4.27",
    "prettier": "^3.0.1",
    "prettier-plugin-astro": "^0.11.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "sass": "^1.64.2",
    "subfont": "^7.2.1",
    "subset-font": "^2.4.0",
    "tailwind-bootstrap-grid": "^5.1.0",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.20.5",
    "typescript": "5.9.3"
  }
}
